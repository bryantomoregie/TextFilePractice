<Window x:Class="TextFilePractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextFilePractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" Grid.ColumnSpan="3" Text="Text File Challenge" Margin="0,0,0,10"/>
        <TextBlock Grid.Row="2" Grid.Column="1" FontSize="20" Text=" First name: " />
        <TextBox Grid.Row="2" Grid.Column="2" Width="150" MinHeight="28" Margin="7,0,6,15"/>
        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="20" Text=" Last name: " />
        <TextBox Grid.Row="3" Grid.Column="2" Width="150" MinHeight="28" Margin="7,0,6,15"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Text=" Age: " FontSize="20" />
        <TextBox Grid.Row="4" Grid.Column="2" Width="150" MinHeight="28" Margin="7,0,6,15"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Text=" Is Alive: " FontSize="20" Margin="0,0,0,15"/>
        <CheckBox Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Margin="5,9,0,19"/>
        <Button Grid.Row="6" Grid.Column="1" Content="Add User" Height="40" Grid.ColumnSpan="3" Margin="0,1,0,5" FontSize="20"/>
        <Button Grid.Row="7" Grid.Column="1" Content="Save List" Height="40" Grid.ColumnSpan="3" FontSize="20" Margin="0,1,0,0"/>

        <ListBox Grid.Column="5" Grid.Row="2" Grid.RowSpan="6" Margin="0.922,0,0,0"/>








    </Grid>
</Window>
